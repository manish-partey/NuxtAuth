# ===================================
# APPLICATION CONFIGURATION
# ===================================
# Core settings required for the application to run

# Application URL (used for password reset links, email verification, etc.)
PUBLIC_APP_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/nuxtauth

# JWT Secret for authentication (change this to a random secure string)
JWT_SECRET=change-this-to-a-random-secure-string-min-32-chars

# Email Configuration (Optional - emails will be logged to console if not configured)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourapp.com

# Base URL for application links in emails
NUXT_PUBLIC_BASE_URL=http://localhost:3000

# ===================================
# FEATURE FLAGS CONFIGURATION
# ===================================
# Set to 'false' to disable specific features
# All features are set to 'true' for testing

# Organization Admin Features
FEATURE_ORG_AUDIT_LOGS=true              # View audit logs
FEATURE_ORG_PASSWORD_RESET=true          # Trigger password resets for users
FEATURE_ORG_DETAILS=true                 # View organization details
FEATURE_ORG_EDIT=true                    # Edit organization metadata
FEATURE_ORG_USER_MGMT=true               # Full user CRUD operations
FEATURE_ORG_DOC_MGMT=true                # Manage organization documents
FEATURE_ORG_INVITE=true                  # Invite new users
FEATURE_ORG_SETTINGS_PROFILE=true        # User profile management
FEATURE_ORG_SETTINGS_PASSWORD=true       # Password change
FEATURE_ORG_SETTINGS_ORG=true            # Organization-level settings

# Platform Admin Features
FEATURE_PLATFORM_ORG_APPROVAL=true       # Approve/reject organizations
FEATURE_PLATFORM_SETTINGS=true           # Manage platform settings
FEATURE_PLATFORM_DOC_REQS=true           # Set document requirements
FEATURE_PLATFORM_ANALYTICS=true          # View platform analytics

# Super Admin Features
FEATURE_SUPER_PLATFORM_MGMT=true         # Full platform CRUD
FEATURE_SUPER_AUDIT_LOGS=true            # System-wide audit logs
FEATURE_SUPER_IMPERSONATE=true           # Impersonate users
FEATURE_SUPER_SETTINGS=true              # Global system settings

# General Features
FEATURE_EMAIL_VERIFICATION=true          # Require email verification
FEATURE_TWO_FACTOR=true                  # Enable 2FA (set to true for testing)
FEATURE_SUBSCRIPTIONS=true               # Subscription features
FEATURE_NOTIFICATIONS=true               # In-app notifications

# ===================================
# EXAMPLE: Disable specific features
# ===================================
# To disable audit logs for org admins:
# FEATURE_ORG_AUDIT_LOGS=false
#
# To disable password reset triggers:
# FEATURE_ORG_PASSWORD_RESET=false
#
# To disable all org settings:
# FEATURE_ORG_SETTINGS_PROFILE=false
# FEATURE_ORG_SETTINGS_PASSWORD=false
# FEATURE_ORG_SETTINGS_ORG=false
